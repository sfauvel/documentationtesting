<idea-plugin>
    <id>org.sfvl.doctesting.docAsTestPlugin</id>
    <name>DocAsTestPlugin</name>
    <vendor email="sfauvel@gmail.com" url="https://github.com/sfauvel">SÃ©bastien Fauvel</vendor>

    <description><![CDATA[
    Allow to manipulate 'approvals' files (approved and received)
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <idea-version since-build="201" until-build="213.*" />

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <group id="DocAsTestActions" text="Doc as test" popup="true">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </group>

        <action id="SwitchToJavaFileAction"
                class="SwitchToJavaFileAction"
                text="Switch to java file"
                description="Switch to java file">
            <add-to-group group-id="DocAsTestActions" anchor="first"/>
        </action>
        <action id="SwitchToApprovedFileAction"
                class="SwitchToApprovedFileAction"
                text="Switch to approved file"
                description="Switch to approved file">
            <add-to-group group-id="DocAsTestActions" anchor="first"/>
        </action>
        <action id="SwitchToReceivedFileAction"
                class="SwitchToReceivedFileAction"
                text="Switch to received file"

                description="Switch to received file">
            <add-to-group group-id="DocAsTestActions" anchor="first"/>
        </action>
        <action id="ApproveFileAction"
                class="ApproveFileAction"
                text="Approve file"
                description="Approve file">
            <add-to-group group-id="DocAsTestActions" anchor="first"/>
        </action>
        <action id="CompareFileAction"
                class="CompareFileAction"
                text="CompareFileAction"
                description="CompareFileAction">
            <add-to-group group-id="DocAsTestActions" anchor="first"/>
        </action>

    </actions>
</idea-plugin>